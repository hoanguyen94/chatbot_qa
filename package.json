{
  "name": "chatbot_searchdoc",
  "version": "1.0.0",
  "description": "Question-answering chatbot from specific books",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "test": "mocha --recursive",
    "build": "rimraf dist && tsc",
    "start:dev": "ts-node src/server.ts",
    "start": "node dist/src/server.js",
    "watch": "nodemon src/server.ts",
    "test:coverage": "c8 --check-coverage --lines 80 --function 80 --branch 80 npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoanguyen94/chatbot_qa.git"
  },
  "keywords": [
    "Q&A",
    "chatbot"
  ],
  "author": "Hoa Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hoanguyen94/chatbot_qa/issues"
  },
  "homepage": "https://github.com/hoanguyen94/chatbot_qa#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "c8": "^8.0.1",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^0.1.6",
    "@types/multer": "^1.4.7",
    "@types/sinon": "^10.0.16",
    "cf-nodejs-logging-support": "^7.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "langchain": "^0.0.131",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.6.7",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": ">=16"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.ts"
    ],
    "node-option": [
      "experimental-loader=ts-node/esm",
      "no-warnings"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "test"
    ],
    "ext": "js,json,ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "warn",
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    },
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  }
}
